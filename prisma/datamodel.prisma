type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String!
  cart: [Item!]!
  roles: Role!
}

type Item {
  id: ID! @id
  name: String!
  description: String!
  price: Float!
  qty: Int
  stock: Int!
  imgUrl: String!
}

type Order {
  id: ID! @id
  item: Item!
  status: Status!
}

enum Status {
  InCart
  Shipped
  Delivered
}

enum Role {
  USER
  ADMIN
}