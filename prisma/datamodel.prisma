type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String!
  role: Role!
  orders: [Order!]!
}

type Item {
  id: ID! @id
  name: String!
  description: String!
  price: Float!
  stock: Int!
  imgUrl: String!
  
}

type Order {
  id: ID! @id
  item: Item!
  status: Status!
  qty: Int!
}

enum Status {
  InCart
  Shipped
  Delivered
}

enum Role {
  User
  Admin
}